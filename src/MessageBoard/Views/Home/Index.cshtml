@model IEnumerable <MessageBoard.Models.Post>

<html>
<head>
    <title>Current Post</title>
</head>
<body>
    <h4>@Html.DisplayNameFor(model => model.Author)</h4>
    <ul>
        @foreach (var listItem in Model)
        {
            <li>@Html.DisplayFor(modelItem => listItem.Message) | @Html.ActionLink("Details", "Details", new { id = listItem.PostId })</li>
        }
    </ul>
</body>
</html>
