
@{
    ViewData["Title"] = "Item - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MessageBoard.Models.Post

    
    
        <h2 class="cool">Create</h2>
        <hr />
        <h4 class="cool">Add a new post:</h4>
       
    @using (Html.BeginForm())
    {   <div class="form-group">
            <div class="cool">
                @Html.LabelFor(model => model.Title)
            </div>
                @Html.EditorFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Title)
            </div>
           
                <div class="form-group">
                    <div class="cool">
                        @Html.LabelFor(model => model.Message)
                    </div>
                    @Html.EditorFor(model => model.Message, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Message)
                    <br />
                    <br />
                    <input type="submit" value="Add new post" />
                    </div>
                
                }


    <p>@Html.ActionLink("Back to list", "Index")</p>
