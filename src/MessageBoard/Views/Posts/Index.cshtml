
@model IEnumerable<MessageBoard.Models.Post>
@{
    ViewData["Title"] = "Message Board";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Feel good success stories:</h2>
<hr />

<ul>
    @foreach (var listItem in Model)
    {
        <li>@Html.DisplayFor(modelItem => listItem.Title) | @Html.DisplayFor(modelItem => listItem.Comments)| @Html.ActionLink("Details", "Details", new { id = listItem.PostId }) | @Html.ActionLink("Edit", "Edit", new { id = listItem.PostId }) | @Html.ActionLink("Delete", "Delete", new { id = listItem.PostId })</li>
    }
</ul>
<p>@Html.ActionLink("Add new item", "Create")</p>

